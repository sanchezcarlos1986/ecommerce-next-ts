{
  "name": "ecommerce-next",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "next dev -- -p 8080",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:css": "postcss assets/main.css -o assets/main_browser.css",
    "pre-commit": "npm run branch-naming-check && lint-staged",
    "branch-naming-check": "branch-naming-check \"^(master|develop)|(feature|bugfix|refactor|ci|hotfix|jira|issue|renovate)/[a-zA-Z0-9._-]+$\"",
    "test:watch": "jest --watch",
    "test:unit": "jest"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "next": "12.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-ticker": "^1.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@innocells/branch-naming-check": "^1.0.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.33",
    "autoprefixer": "^10.4.0",
    "deepmerge": "^4.2.2",
    "eslint": "7",
    "eslint-config-next": "12.0.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-nesting": "^10.0.2",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
